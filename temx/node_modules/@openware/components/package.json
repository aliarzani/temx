{
  "name": "@openware/components",
  "version": "2.3.0",
  "private": false,
  "description": "CryptoBase React UI Components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "docs",
    "style.pcss",
    "dark.pcss"
  ],
  "repository": "https://github.com/openware/components",
  "author": "Openware <hello@openware.com>",
  "homepage": "https://www.openware.com",
  "license": "Apache-2.0",
  "scripts": {
    "lint": "npm-run-all lint:ts lint:style lint:tslint",
    "lint:ts": "tsc --noEmit",
    "lint:style": "stylelint --config config/stylelint.config.js $(find . -type f -name \"*.pcss\")",
    "lint:tslint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "clean": "rimraf dist docs base.pcss",
    "build:pack": "webpack --config config/webpack.config.js --mode production",
    "build:pack:dev": "webpack --config config/webpack.config.js --mode development",
    "build": "npm run clean && yarn build:pack && yarn build:docs",
    "test": "jest",
    "test:coverage": "jest --collectCoverage=true",
    "test:ci": "jest --ci --runInBand",
    "build:docs": "cross-env STYLEGUIDE=true styleguidist --config config/styleguide.config.js build",
    "start": "cross-env STYLEGUIDE=true styleguidist --config config/styleguide.config.js server"
  },
  "devDependencies": {
    "@openware/coding-standards": "^2.3.0",
