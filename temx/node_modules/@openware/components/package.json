    "recharts": "^1.1.0",
    "tslint-react": "^4.1.0",
    "uuid": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "./scripts/validate_commit.js $HUSKY_GIT_PARAMS && (cd \"./$GIT_PREFIX\"; yarn lint)",
      "pre-push": "yarn lint && yarn test"
    }
  }
