    "stylelint": "^9.5.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "toggle-selection": "^1.0.6",
    "ts-jest": "24.2.0",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
